@model Candidate
<div class="display-6">
    Apply
</div>
<form method="post" asp-action="Apply">
    <div class="form-group my-2">
    <label asp-for="Email"></label>
    <input asp-for="Email" class="form-control" type="text">
    </div>
    <div class="form-group my-2">
    <label asp-for="FirstName"></label>
    <input asp-for="FirstName"class="form-control" type="text">
    </div>
    <div class="form-group my-2">
    <label asp-for="LastName"></label>
    <input asp-for="LastName" class="form-control" type="text">
    </div>
    <div class="form-group my-2">
    <label asp-for="Age"></label>
    <select asp-for="Age" class="form-control">
        <option value="18">18</option>
        <option value="19">19</option>
        <option value="20">20</option>
        <option value="21">21</option>
        <option value="22">22</option>
        <option value="23">23</option>
        <option value="24">24</option>
        <option value="25">25</option>
    </select>
    </div>
    <fieldset>
        <legend>Select One Course</legend>
        <p>
            <input type="radio" name="SelectedCourse" id="mvc" value="ASP.NET Core MVC" checked>
            <label>ASP.NET Core MVC</label>
        </p>
        <p>
            <input type="radio" name="SelectedCourse" id="api" value="ASP.NET Core API">
            <label>ASP.NET Core API</label>
        </p>
        <p>
            <input type="radio" name="SelectedCourse" id="blazor" value="Blazor">
            <label>Blazor</label>
        </p>
    </fieldset>
    <div>
       
        <button class="btn btn-primary" type="submit">Apply</button>
        <a class="btn btn-warning" asp-action="Index" asp-controller="Home">Home</a>
    </div>
</form>